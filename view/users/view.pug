extends ../layouts/common
block content
    h1 View Users
    table.table
        tr
            th Avatar
            th Name
            th Age
            th Sex
            th Phone
            th Email
            th Address
        tr
            td
                img(src = user.avatar,width=64)
            td= user.name
            td= user.age
            td= user.sex
            td= user.phone
            td= user.mail
            td= user.address
    