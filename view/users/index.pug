extends ../layouts/common
block content
    h1(class="text-align") Family Team
       a.btn.btn-danger.ml-3(href="/users/create") New
    .d-flex
        form.ml-auto(action='/users/search', method="GET",class="d-flex")
            input(placeholder="Search Name",type="text", name="q",class="form-control")
            button(class="btn btn-danger ml-2") Search
    table.table
        tr
            th Name
            th Phone
            th Email
            th Action
        each user in users
            tr
                td= user.name
                td= user.phone
                td= user.mail
                td
                    a.btn.btn-light(href="/users/" + user.id) View