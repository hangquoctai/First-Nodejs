extends ../layouts/common
block content
    h1 Login
    if errors
            each error in errors
                .alert.alert-danger= error
    form(method="POST")
        .form-group
            label(for='mail') Email
            input#email.form-control(name="mail",type="text",value=values?values.mail:"")
        .form-group
            label(for='password') Email
            input#email.form-control(name="password",type="password",value=values?values.password:"")
        button.btn.btn-primary Login